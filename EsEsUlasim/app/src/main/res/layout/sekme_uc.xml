<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    style="@style/btnStyleopal">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="#ffffff" android:textSize="20dp"
        android:id="@+id/textView3" android:text="  DURAKLAR"
        android:editable="false"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_alignEnd="@+id/textView4" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="#ffffff" android:textSize="20dp"
        android:id="@+id/textView4" android:text="  OTOBÜSLER"
        android:textColor="#000000"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner android:layout_height="40dp" android:layout_width="150dp" android:background="#fbfbfb" android:id="@+id/spinner4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true" />

    <Spinner android:layout_height="40dp" android:layout_width="150dp" android:background="#ffffff" android:id="@+id/spinner5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true" />

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:id="@+id/button5" android:text="SEÇİLİ OTOBÜSÜ GÖSTER"
        android:layout_below="@+id/spinner5"
        android:layout_alignStart="@+id/button6"
        android:layout_alignParentEnd="true"
        style="@style/btnStyleopal" />

    <ListView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/listView2" android:layout_below="@+id/button5" android:layout_alignParentBottom="true"
        android:background="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DURAKTAN GEÇEN TÜM OTOBÜSLERİ GÖSTER"
        android:id="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        style="@style/btnStyleopal" />
</RelativeLayout>